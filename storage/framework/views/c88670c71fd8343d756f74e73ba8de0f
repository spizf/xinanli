    <script>
        $(function() {
            //四评价切换
            $(".add .addle").click(function() {
                $(this).addClass("on").siblings().removeClass("on");
                var x = $(".add .addle").index(this);
                $(".addpjb .addpjbt").hide();
                $(".addpjb .addpjbt").eq(x).show();
            });
            //推荐专家切换
            $(".addnewbobot-t a").click(function() {
                $(this).addClass("on").siblings().removeClass("on");
                var x = $(".addnewbobot-t a").index(this);
                $(".addnewbobot-bb").hide();
                $(".addnewbobot-bb").eq(x).show();
            });
            $(".addnewles").click(function() {
                $(this).addClass("on").siblings().removeClass("on");
                var x = $(".addnewles").index(this);
                $(".addnewbobot").hide();
                $(".addnewbobot").eq(x).show();
            });

        });
        //点击发布
        function fabu() {
            var projectName = $("#projectName").val();
            var productName = $("#productName").val();
            var productNum = $("#productNum").val();
            var iphone = $("#mobile").val();
            var lianxi = $("#lianxi").val();
            var code = $("#code").val();
            if(projectName == "") {
                layer.msg("项目名称不能为空");
                return false;
            }
            if(productName == "") {
                layer.msg("生产产品名称不能为空");
                return false;
            }
            if(productNum == "") {
                layer.msg("产品产量不能为空");
                return false;
            }
            if(iphone == "") {
                layer.msg("手机号不能为空");
                return false;
            }
            if(lianxi == "") {
                layer.msg("联系人不能为空");
                return false;
            }
            if(code == "") {
                layer.msg("验证码不能为空");
                return false;
            }
            $('#fastTask').submit();
        }
        //点击立即搜索
        function lijisousuo(){
            var sousuo = $("#sousuo").val();
            if(sousuo == ""){
                layer.msg("搜索内容不能为空");
            }
        }
        </script>
